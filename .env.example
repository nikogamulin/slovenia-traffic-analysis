# Environment configuration example
# Copy this file to .env and fill in your actual values

# Data paths
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
RESULTS_DIR=./results

# Database configuration (if using)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=slovenia_traffic
DB_USER=your_username
DB_PASSWORD=your_password

# API Keys (for external data sources)
ARSO_API_KEY=  # Slovenian Environment Agency
DARS_API_KEY=  # DARS traffic data
OPENWEATHER_API_KEY=  # Weather data backup

# Analysis configuration
DEFAULT_CONFIDENCE_LEVEL=0.95
MCMC_SAMPLES=10000
MCMC_CHAINS=4
RANDOM_SEED=42

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/analysis.log

# Jupyter configuration
JUPYTER_PORT=8888

# Performance settings
N_JOBS=-1  # Number of parallel jobs (-1 for all cores)
CHUNK_SIZE=10000  # For processing large datasets